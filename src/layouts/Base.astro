---
import { languages, markdownify, isRtl } from '../i18n/config';
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
  lang: string;
  description: string;
}

const {
  title,
  lang,
  description,
} = Astro.props;

const dir = isRtl(lang) ? "rtl" : "ltr";
---
<!DOCTYPE html>
<html lang={lang} dir={dir}>
<head>
  <title>{title}</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="color-scheme" content="light dark">
  <meta name="description" content={description}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="https://keepandroidopen.org/img/altered-deal.png">
  <meta property="og:type" content="website">
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:image" content="https://keepandroidopen.org/img/altered-deal.png">
  <link rel="me" href="https://techhub.social/@keepandroidopen">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">

  <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.colors.min.css"> -->
  <style is:global>
  
    main {
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
      padding: 2em;
    }
    
    h1 {
      /* font-size: 46px; */
      /* font-weight: 600; */
      /* color: #2c3e50; */
      /* margin: 0; */
      /* display: flex; */
      align-items: center;
      gap: 20px;
      text-align: center;
      /* margin-left: auto; */
      /* margin-right: auto; */
    }

    h1::before,
    h1::after {
      content: '';
      flex: 1;
      height: 2px;
      background: linear-gradient(90deg, transparent, #3498db, transparent);
      max-width: 100px;
      margin-left: auto;
      margin-right: auto;
    }

    .outerlync {
      cursor: not-allowed;
      display: inline-block;
      background: transparent;
    }

    .innerlync {
      transform-style: preserve-3d;
      transition: ease-out 0.6s;
    }

    .outerlync:hover .innerlync {
      transition: ease-in-out 2.5s;
      transform: rotate(1800deg) rotateX(0deg) rotateY(0deg) rotateZ(0deg);
    }

    .lang-menu {
      text-align: center;
      font-size: smaller;
      padding-bottom: 0.5em;
      margin-left: 20px;
      margin-right: 20px;
      margin-bottom: 0.5em;
      border-bottom: 1px solid lightgray;
    }

    .lang-menu a {
      white-space: nowrap;
    }

    footer {
      /* padding: 0px; */
      /* margin: 0px; */
      font-size: 14px;
      line-height: 1.6;
      width: 100%;
      border-top: 1px solid #dee2e6;
    }

    .li-list {
      list-style: none;
      align-items: center;
      vertical-align: middle;
      background-repeat: no-repeat;
      background-position: left center;
      padding-inline-start: 2em;
      line-height: 1.5;
      content: "âž¤ ";
    }

    .li-list::before {
      margin-inline-end: 0.5em;
    }

    .li-money::before {
      mask: url('/img/money_bag.svg') no-repeat center / contain;
      -webkit-mask: url('/img/money_bag.svg') no-repeat center / contain;
      background-color: var(--pico-color);
      width: 1em;
      height: 1em;
      content: "";
      display: inline-block;
      margin-inline-start: -1.5em;
      margin-inline-end: 0.5em;
    }

    .li-terms::before {
      mask: url('/img/contract_edit.svg') no-repeat center / contain;
      -webkit-mask: url('/img/contract_edit.svg') no-repeat center / contain;
      background-color: var(--pico-color);
      width: 1em;
      height: 1em;
      content: "";
      display: inline-block;
      margin-inline-start: -1.5em;
      margin-inline-end: 0.5em;
    }

    .li-id::before {
      mask: url('/img/id_card.svg') no-repeat center / contain;
      -webkit-mask: url('/img/id_card.svg') no-repeat center / contain;
      background-color: var(--pico-color);
      width: 1em;
      height: 1em;
      content: "";
      display: inline-block;
      margin-inline-start: -1.5em;
      margin-inline-end: 0.5em;
    }

    .li-signing::before {
      mask: url('/img/fingerprint.svg') no-repeat center / contain;
      -webkit-mask: url('/img/fingerprint.svg') no-repeat center / contain;
      background-color: var(--pico-color);
      width: 1em;
      height: 1em;
      content: "";
      display: inline-block;
      margin-inline-start: -1.5em;
      margin-inline-end: 0.5em;
    }

    .li-appids::before {
      mask: url('/img/receipt.svg') no-repeat center / contain;
      -webkit-mask: url('/img/receipt.svg') no-repeat center / contain;
      background-color: var(--pico-color);
      width: 1em;
      height: 1em;
      content: "";
      display: inline-block;
      margin-inline-start: -1.5em;
      margin-inline-end: 0.5em;
    }

    .header-icons {
      float: inline-end;
      margin-inline-end: 1rem;
      z-index: 1000;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
    }

    .header-icon-link {
      color: var(--pico-text);
      padding: 0.5rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
    }

    .header-icon-link:hover {
      opacity: 0.8;
    }

    .callout-warning {
      border-inline-start: 4px solid #d32f2f;
      background: rgba(211, 47, 47, 0.08);
      padding: 1rem 1.5rem;
      margin: 1.5rem 0;
      border-start-end-radius: 0.5rem;
      border-end-end-radius: 0.5rem;
    }

    .callout-warning h3 {
      margin-top: 0;
      color: #d32f2f;
    }

    .callout-warning blockquote {
      border-inline-start: none;
      background: rgba(211, 47, 47, 0.08);
      border-radius: 0.5rem;
      padding: 1rem 1.5rem;
      margin: 1rem 0;
      font-style: italic;
      font-size: 1.05em;
      color: var(--pico-color);
      quotes: "\201C" "\201D";
    }

    .callout-warning blockquote p::before {
      content: open-quote;
      font-size: 1.5em;
      font-weight: bold;
      color: #d32f2f;
      margin-inline-end: 0.15em;
      vertical-align: -0.15em;
      line-height: 0;
    }

    .callout-warning blockquote p::after {
      content: close-quote;
      font-size: 1.5em;
      font-weight: bold;
      color: #d32f2f;
      margin-inline-start: 0.1em;
      vertical-align: -0.15em;
      line-height: 0;
    }

    [data-theme="dark"] .callout-warning {
      background: rgba(211, 47, 47, 0.15);
    }

    [data-theme="dark"] .callout-warning h3 {
      color: #ef5350;
    }

    [data-theme="dark"] .callout-warning blockquote {
      background: rgba(211, 47, 47, 0.12);
    }

    [data-theme="dark"] .callout-warning blockquote p::before,
    [data-theme="dark"] .callout-warning blockquote p::after {
      color: #ef5350;
    }

  </style>
</head>
<body>
  <slot />
</body>
</html>